<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>false</primitive>
  <delegateAnalysisEngineSpecifiers>
    <delegateAnalysisEngine key="LanguageChecker">
      <import location="../annotators/LanguageChecker.xml"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="HTMLAnnotator">
      <import location="../annotators/HTMLAnnotator.xml"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="SentencBoundaryDetector">
      <import location="../annotators/SentenceBoundaryDetector.xml"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="GenericRelevanceAnnotator">
      <import location="../annotators/relevance/GenericRelevanceAnnotator.xml"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="LGPTagger">
      <import location="../annotators/taggers/LGPTagger.xml"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="LGPTokenizer">
      <import location="../annotators/LGPTokenizer.xml"/>
    </delegateAnalysisEngine>
  </delegateAnalysisEngineSpecifiers>
  <analysisEngineMetaData>
    <name>LingPipeTester</name>
    <description/>
    <version>1.0</version>
    <vendor/>
    <configurationParameters searchStrategy="language_fallback">
      <configurationParameter>
        <name>runningOnServer</name>
        <description>Flag indicating whether we are running on a server or not.</description>
        <type>Boolean</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
        <overrides>
          <parameter>LGPTagger/runningOnServer</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>modelLocation</name>
        <description>Location of the model file used for tagging.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
        <overrides>
          <parameter>LGPTagger/modelLocation</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>AcceptedLanguages</name>
        <description>A comma-separated list of languages that are accepted by the language checker. If set to the empty string, text of any language will pass the threshold.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>LanguageChecker/AcceptedLanguages</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>SetLanguageOnEmptyAcceptList</name>
        <description>Sets the behaviour in the case the accept list is empty: if set to true, the language will be identified and stored in the CAS. Otherwise no action will be taken (which is a lot faster).</description>
        <type>Boolean</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>LanguageChecker/SetLanguageOnEmptyAcceptList</parameter>
        </overrides>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>SetLanguageOnEmptyAcceptList</name>
        <value>
          <boolean>true</boolean>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>modelLocation</name>
        <value>
          <string>dummy</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>AcceptedLanguages</name>
        <value>
          <string>dummy  value  to be set externally</string>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <flowConstraints>
      <fixedFlow>
        <node>HTMLAnnotator</node>
        <node>GenericRelevanceAnnotator</node>
        <node>LanguageChecker</node>
        <node>LGPTokenizer</node>
        <node>SentencBoundaryDetector</node>
        <node>LGPTagger</node>
      </fixedFlow>
    </flowConstraints>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs/>
        <outputs/>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </analysisEngineMetaData>
  <resourceManagerConfiguration/>
</analysisEngineDescription>
