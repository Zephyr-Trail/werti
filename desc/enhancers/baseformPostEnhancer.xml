<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
<frameworkImplementation>org.apache.uima.java</frameworkImplementation>
<primitive>true</primitive>
<annotatorImplementationName>org.werti.uima.enhancer.BaseformPostEnhancer</annotatorImplementationName>
<analysisEngineMetaData>
<name>baseformPostEnhancer</name>
<description>Rather specialised enhancer that depends on the vislcg3 one and adds baseforms for INF and GER chunks to the enhancement tags. It uses the morpha morphological analyser (http://www.informatics.susx.ac.uk/research/groups/nlp/carroll/morph.html).</description>
<version>1.0</version>
<vendor></vendor>
<configurationParameters>
<configurationParameter>
<name>morphaLoc</name>
<description>Location of the morpha program.</description>
<type>String</type>
<multiValued>false</multiValued>
<mandatory>true</mandatory>
</configurationParameter>
<configurationParameter>
<name>morphaVerbstemLoc</name>
<description>Location of the verbstem file used by morpha.</description>
<type>String</type>
<multiValued>false</multiValued>
<mandatory>true</mandatory>
</configurationParameter>
</configurationParameters>
<configurationParameterSettings>
<nameValuePair>
<name>morphaLoc</name>
<value>
<string>/Users/rziai/Software/morph/morpha.ppc_darwin</string>
</value>
</nameValuePair>
<nameValuePair>
<name>morphaVerbstemLoc</name>
<value>
<string>/Users/rziai/Software/morph/verbstem.list</string>
</value>
</nameValuePair>
</configurationParameterSettings>
<typeSystemDescription>
<imports>
<import location="../vislcg3TypeSystem.xml"/>
</imports>
</typeSystemDescription>
<typePriorities/>
<fsIndexCollection/>
<capabilities>
<capability>
<inputs>
<type allAnnotatorFeatures="true">org.werti.uima.types.Enhancement</type>
<type allAnnotatorFeatures="true">org.werti.uima.types.annot.CGToken</type>
</inputs>
<outputs>
<type allAnnotatorFeatures="true">org.werti.uima.types.Enhancement</type>
<type allAnnotatorFeatures="true">org.werti.uima.types.annot.CGToken</type>
</outputs>
<languagesSupported/>
</capability>
</capabilities>
<operationalProperties>
<modifiesCas>true</modifiesCas>
<multipleDeploymentAllowed>true</multipleDeploymentAllowed>
<outputsNewCASes>false</outputsNewCASes>
</operationalProperties>
</analysisEngineMetaData>
<resourceManagerConfiguration/>
</analysisEngineDescription>
