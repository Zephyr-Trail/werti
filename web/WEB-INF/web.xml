<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <!-- General description of your web application -->
    <display-name>WERTi</display-name>
    <description>Learning languages interactively on the WEB</description>

    <context-param>
      <param-name>webmaster</param-name>
      <param-value>admtrov@sfs.uni-tuebingen.de</param-value>
      <description>Mail for trouble</description>
    </context-param>

    <servlet>
	    <servlet-name>UIMAtest</servlet-name>
	    <description>testing the UIMA functionality</description>
	    <servlet-class>org.werti.UIMAtest</servlet-class>
    </servlet>

    <servlet>
	    <servlet-name>Interface</servlet-name>
	    <servlet-class>org.werti.Interface</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>UIMAtest</servlet-name>
	 <url-pattern>/uima</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
	    <servlet-name>Interface</servlet-name>
	    <url-pattern>/</url-pattern>
    </servlet-mapping>

    <session-config>
      <session-timeout>30</session-timeout> 
    </session-config>
</web-app>
